    <style>
        .text-justify {
            text-align: justify;
        }

        * {
            box-sizing: border-box;
        }

        .cat-sidebar {}

        .cat-group {
            margin-top: 12px;
        }

        .cat-group,
        .cat-children {
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: flex-start;
        }

        .cat-children {
            width: 100%;
            padding: 12px;
            min-height: 30px;
            background: #fdfdfd;
            border: 1px solid #efefef;
            border-top: none;
        }

        .no-children {
            font-style: italic;
            font-size: 0.9rem;
            opacity: 0.6;
            color: var(--agriox-primary, #334b35);
        }

        .cat-link {
            display: block;
            width: 100%;
            padding: 8px 16px;
            border-radius: 4px;
            box-sizing: border-box;
            font-size: 0.94rem;
            line-height: 1.4;
            margin-top: 4px;
            transition: all 120ms linear;
            background: #F9F9F9;
            color: var(--agriox-primary, #334b35);
            border: 1px solid #E8E8E8;
        }

        .cat-children .cat-link {
            margin-top: 2px;
            margin-bottom: 4px;
        }


        .cat-children .cat-link:first-child {
            margin-top: 4px;
        }

        .cat-link.parent {
            font-weight: 500;
        }

        .cat-files-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 12px;
        }

        .cat-file {
            border: 1px solid #E8E8E8;
            background: #F9F9F9;
            padding: 16px;
            border-radius: 8px;
            display: flex;
            gap: 12px;
            align-items: center;
            transition: all 120ms linear;
        }

        .cat-file:hover {
            color: inherit;
            background: #f4f4f4;
        }

        .cat-file img {
            height: 36px;
        }

        .cat-file div {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            height: 100%;
        }

        .cat-file h6 {
            margin-bottom: 4px;
        }

        .cat-file small {
            line-height: 1;
            font-size: 0.8rem;
        }

        @media (min-width: 992px) {
            .cat-files-grid {
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                gap: 12px;
            }
        }

        @media (max-width: 576px) {
            .cat-files-grid {
                display: grid;
                grid-template-columns: repeat(1, 1fr);
                gap: 12px;
            }

            .cat-sidebar {
                border-bottom: 1px solid #dee2e6 !important;
                padding-bottom: 24px;
                margin-bottom: 24px;
            }
        }

        .disabled {
            color: rgba(0, 0, 0, 0.3) !important;
        }

        label {
            font-size: 0.9rem;
        }

        .form-check {
            display: inline-flex;
            justify-content: flex-start;
            align-items: center;
            margin-top: 8px;
        }

        .form-check-label {
            margin-left: 4px;
            margin-top: 4px;
        }

        .selected {
            border-color: blue !important;
        }
    </style>
</head>

